<Marisa>

	<append xpath="/entity_classes">

		<!-- ** DireWolf -->
		<entity_class name="EntityBossAnimalDireWolf" extends="animalDireWolf">
			<property name="UserSpawnType" value="Menu"/>
			<property name="Tags" value="entity,animal,hostile,wolf,perkAT02,perkAT03"/>

			<property name="SizeScale" value="0.65"/>

<!--			<property name="ParticleOnSpawn" value="ParticleEffects/RadiatedParticlesOnMesh" param1="SetShapeToMesh0"/>-->
			<property name="HandItem" value="HandEntityBossAnimalDireWolf"/>

			<property name="MoveSpeed" value="2.0"/>
			<property name="MoveSpeedAggro" value="4.0, 4.0"/>
			<property name="MaxTurnSpeed" value="240"/>
			<property name="JumpMaxDistance" value="3, 36"/>
			<property name="PainResistPerHit" value=".9"/>

			<property name="AITask-1" value="Leap"/>
			<property name="AITask-2" value="BreakBlock"/>
			<property name="AITask-3" value="DestroyArea"/>
			<property name="AITask-4" value="Territorial"/>
			<property name="AITask-5" value="ApproachAndAttackTarget" data="class=EntityPlayer,0,EntityBandit,15,EntityAnimalStag,30,EntityZombie,20"/>
			<property name="AITask-6" value="ApproachSpot"/>
			<property name="AITask-7" value="Look"/>
			<property name="AITask-8" value="Wander"/>
			<property name="AITask-9" value=""/>
			<property name="AITarget-1" value="SetAsTargetIfHurt"/>
			<property name="AITarget-2" value="BlockingTargetTask"/>
			<property name="AITarget-3" value="SetNearestEntityAsTarget" data="class=EntityPlayer,0,0,EntityBandit,0,-4,EntityZombie,0,-4"/>
			<property name="AITarget-4" value=""/>

			<property name="ExperienceGain" value="4000"/>
			<property name="LootDropEntityClass" value="EntityLootContainerBoss"/>
			<property name="LootDropProb" value="1"/>

			<property name="DeadBodyHitPoints" value="900"/>
			<drop event="Harvest" name="foodRawMeat" count="0" tool_category="Butcher"/>
			<drop event="Harvest" name="foodRawMeat" tag="butcherHarvest" count="100"/>
			<drop event="Harvest" name="resourceLeather" tag="butcherHarvest" count="45"/>
			<drop event="Harvest" name="resourceAnimalFat" tag="butcherHarvest" count="15"/>
			<drop event="Harvest" name="resourceBone" tag="butcherHarvest" count="85"/>
			<drop event="Harvest" name="resourceBone" tag="allToolsHarvest" count="45"/>
			<drop event="Harvest" name="resourceIridescentCube" tag="allToolsHarvest" count="32"/>

			<effect_group name="Base Effects">
				<passive_effect name="HealthMax" operation="base_set" value="4000"/>
				<passive_effect name="BuffResistance" operation="base_set" value="5" tags="buffRadiationPool"/>
				<passive_effect name="EntityDamage" operation="perc_add" value=".4"/>
				<triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" target="self" cvar="RadiatedRegenAmount" operation="set" value="20"/>
				<triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" target="self" buff="buffRadiatedRegen"/>
			</effect_group>
		</entity_class>

