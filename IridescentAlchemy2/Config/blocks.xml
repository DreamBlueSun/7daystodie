<Marisa>

    <!--*** 修改 双开木门 双开铁门 可旋转角度 -->
    <remove xpath="/blocks/block[@name='oldWoodDoorDouble']/property[@name='AllowAllRotations']"/>
    <append xpath="/blocks/block[@name='oldWoodDoorDouble']">
        <property name="AllowedRotations" value="Basic90"/>
    </append>
    <remove xpath="/blocks/block[@name='ironDoorDoubleWhite']/property[@name='AllowAllRotations']"/>
    <append xpath="/blocks/block[@name='ironDoorDoubleWhite']">
        <property name="AllowedRotations" value="Basic90"/>
    </append>



    <!--*** 添加挖矿可获取的物资 -->
    <!-- 铁矿石 铅矿石 煤矿石 硝酸钾 油页岩矿床 -->
    <append xpath="/blocks/block[@name='terrOreIron' or @name='terrOreLead' or @name='terrOreCoal' or @name='terrOrePotassiumNitrate' or @name='terrOreOilDeposit']">
        <drop event="Harvest" name="BundleRandomModS001" count="1" prob="0.03" tag="oreWoodHarvest"/>
        <drop event="Harvest" name="BundleRandomModS002" count="1" prob="0.03" tag="oreWoodHarvest"/>
        <drop event="Harvest" name="BundleRandomModS003" count="1" prob="0.02" tag="oreWoodHarvest"/>
    </append>



    <!--*** 钢方块升级 -->
    <append xpath="/blocks/block[@name='steelShapes']">
        <property class="UpgradeBlock">
            <property name="ToBlock" value="IridescentShapes"/>
            <property name="Item" value="resourceIridescentCube"/>
            <property name="ItemCount" value="10"/>
            <property name="UpgradeHitCount" value="4"/>
        </property>
    </append>



    <!--*** 新增方块 -->
    <append xpath="/blocks">

        <!-- 虹彩方块 -->
        <block name="IridescentShapes" shapes="All">
            <property name="DescriptionKey" value="IridescentBlockGroupDesc"/>
            <property name="DisplayType" value="blockHardened"/>
            <property name="Material" value="MIridescentCube"/>
	        <property name="TintColor" value="FF66B2"/>
            <property name="Shape" value="New"/>
            <property name="Texture" value="356"/>
            <property name="UiBackgroundTexture" value="356"/>
            <property name="EconomicValue" value="260"/>
            <property class="RepairItems">
                <property name="resourceIridescentCube" value="20"/>
            </property>
	        <drop event="Harvest" name="resourceScrapIron" count="15" tag="allHarvest"/>
            <drop event="Harvest" name="resourceIridescentCube" count="15" tag="allHarvest"/>
            <drop event="Destroy" count="0"/>
            <drop event="Fall" name="terrDestroyedStone" count="1" prob="0.75" stick_chance="1"/>
            <property name="UpgradeSound" value="place_block_metal"/>
            <property name="SortOrder1" value="S050"/>
            <property name="Group" value="Building,advBuilding"/>
            <property name="FilterTags" value="MC_Shapes"/>
        </block>

    </append>

</Marisa>
