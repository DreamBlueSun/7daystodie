<Marisa>

	<!-- *** entity NavObject -->
	<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']"><property name="NavObject" value="zombieMarisaAT"/></append>
	<append xpath="/entity_classes/entity_class[@name='animalTemplateHostile']"><property name="NavObject" value="zombieMarisaAT"/></append>



	<!-- *** zombies drop resource -->
	<!-- ** zombieArlene -->
	<append xpath="/entity_classes/entity_class[@name='zombieArlene']">
		<effect_group name="EventDropResource">
			<triggered_effect trigger="onOtherKilledSelf" action="CallGameEvent" target="other" target_tags="player" event="EventDropResourceZombieArlene" allow_client_call="true"/>
        </effect_group>
		<effect_group name="EventDropResourceExtract">
			<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="4"/>
				<triggered_effect trigger="onOtherKilledSelf" action="CallGameEvent" target="other" target_tags="player" event="EventDropResourceExtractZombieArlene" allow_client_call="true"/>
        </effect_group>
	</append>
	<append xpath="/entity_classes/entity_class[@name='zombieArleneFeral']">
		<effect_group name="EventDropResourceExtract">
			<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="GT" value="4"/>
			<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="6"/>
				<triggered_effect trigger="onOtherKilledSelf" action="CallGameEvent" target="other" target_tags="player" event="EventDropResourceExtractZombieArlene" allow_client_call="true"/>
        </effect_group>
	</append>
	<append xpath="/entity_classes/entity_class[@name='zombieArleneRadiated']">
		<effect_group name="EventDropResourceExtract">
			<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="GT" value="6"/>
			<requirement name="RandomRoll" seed_type="Random" min_max="0,100" operation="LTE" value="8"/>
				<triggered_effect trigger="onOtherKilledSelf" action="CallGameEvent" target="other" target_tags="player" event="EventDropResourceExtractZombieArlene" allow_client_call="true"/>
        </effect_group>
	</append>



	<!-- *** zombies buff -->
