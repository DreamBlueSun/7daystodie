<Marisa>

	<!-- 察觉 任务 显示 -->
	<append xpath="/nav_object_classes">

		<!-- 丧尸 -->
		<nav_object_class name="marisaATZombieQuest">
			<property name="requirement_type" value="QuestBounds"/>
			<property name="tag" value="Sleeper"/>

			<map_settings>
				<property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
			</map_settings>

			<compass_settings>
				<property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="icon_clamped" value="true"/>
			</compass_settings>

			<onscreen_settings>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="50"/>
				<property name="max_scale_distance" value="50"/>
				<property name="has_pulse" value="true"/>
				<property name="text_type" value="Distance"/>
				<property name="offset" value="0,1,0"/>
				<property name="sprite_size" value="20"/>
				<property name="show_offscreen" value="false"/>
				<property name="sprite_name" value="server_z_never_run"/>
				<property name="color" value="255,0,0,255"/>
			</onscreen_settings>

		</nav_object_class>

		<!-- 动物 -->
		<nav_object_class name="marisaATAnimalQuest">
			<property name="requirement_type" value="QuestBounds"/>
			<property name="tag" value="Sleeper"/>

			<map_settings>
				<property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
			</map_settings>

			<compass_settings>
				<property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
				<property name="color" value="255,0,0,255"/>
				<property name="has_pulse" value="true"/>
				<property name="icon_clamped" value="true"/>
			</compass_settings>

			<onscreen_settings>
				<property name="min_distance" value="0"/>
				<property name="max_distance" value="50"/>
				<property name="max_scale_distance" value="50"/>
				<property name="has_pulse" value="true"/>
				<property name="text_type" value="Distance"/>
				<property name="offset" value="0,1,0"/>
				<property name="sprite_size" value="20"/>
				<property name="show_offscreen" value="false"/>
				<property name="sprite_name" value="ui_game_symbol_enemy_dot"/>
				<property name="color" value="255,0,0,255"/>
			</onscreen_settings>

		</nav_object_class>

	</append>

</Marisa>


	